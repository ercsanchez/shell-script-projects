OTHERFILES = myfile1 myfile2

all: myfile3 

myfile1:
	touch myfile1

myfile2:
	touch $@ 
# $@ refers to the target myfile2
# target is the name of a file that is generated by a program (executables or object files)

myfile3: myfile1 myfile2
	cat $^ > myfile3
# $^ refers to the prerequisite or dependencies myfile1 and myfile2
# prerequisite - a file that is used as input to create the target




clean:
	$(RM) myfile3
	$(RM) $(OTHERFILES)


# command is an action that make carries out
# make -p to get a list of implicit variable defined by make
# RM means rm -f
